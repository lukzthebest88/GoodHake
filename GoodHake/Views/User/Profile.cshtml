@model GoodHake.Models.User

<h2>Benutzerprofil</h2>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">@TempData["SuccessMessage"]</div>
}

<form asp-action="Profile" method="post">
    <div asp-validation-summary="All" class="text-danger"></div>

    <input type="hidden" asp-for="Id" />

    <div class="mb-3">
        <label class="form-label">Name:</label>
        <input type="text" asp-for="Name" class="form-control" readonly /> <!-- Name darf nicht geändert werden -->
    </div>

    <div class="mb-3">
        <label class="form-label">Alter:</label>
        <input type="number" asp-for="Age" class="form-control" />
        <span asp-validation-for="Age" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label class="form-label">Geschlecht:</label>
        <select asp-for="Gender" class="form-control">
            <option value="Männlich">Männlich</option>
            <option value="Weiblich">Weiblich</option>
        </select>
        <span asp-validation-for="Gender" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label class="form-label">Gewicht (kg):</label>
        <input type="number" asp-for="Weight" class="form-control" />
        <span asp-validation-for="Weight" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label class="form-label">Tageskalorienziel:</label>
        <input type="number" asp-for="DailyCalorieGoal" class="form-control" />
        <span asp-validation-for="DailyCalorieGoal" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Speichern</button>
</form>
